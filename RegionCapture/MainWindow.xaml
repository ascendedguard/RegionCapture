<Window x:Class="RegionCapture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Screen Region" 
        Height="350" Width="679" WindowStyle="None" 
        WindowState="Maximized" AllowsTransparency="True" 
        Background="Transparent" x:Name="window">
    <Grid>
        <Canvas Margin="7" Background="White" Opacity=".3" MouseDown="CanvasMouseDown" MouseMove="CanvasMouseMove">
            <Rectangle x:Name="rect" Fill="Black" StrokeThickness="1" Stroke="Black"/>
        </Canvas>
        <Button Content="Accept" Height="23" Name="button2" Width="75" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,12,100,0" Click="AcceptClicked" />
        <Button Content="Close" Height="23" HorizontalAlignment="Right" Margin="0,12,12,0" VerticalAlignment="Top" Width="75" IsCancel="False" Click="CloseClicked" />
    </Grid>
</Window>
